$(".assignment_body").append('<%=j(render 'wanxin/wanxin')%>');
var obj = $(".wanxin_content").last();
KindEditor.ready(function(K) {
      window.editor = K.create($(obj), {
        width : '370px',
        height : '600px',
        minWidth : '370px',
        items : ['source',
          'fontname', 'fontsize', '|', 'forecolor', 'hilitecolor', 'bold', 'italic', 'underline',
          'removeformat', '|',
          'justifyleft', 'justifycenter', 'justifyright', 'insertorderedlist',
          '|','mark','commit'],
        afterCreate : function() {
          this.sync();
        },
        afterBlur: function(){
          this.sync();
        }//同步KindEditor的值到textarea文本框
      });
    });