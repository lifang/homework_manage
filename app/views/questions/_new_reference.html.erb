<div class="book_box_con">
  <div class="progressBar clearAfter">
    <ul>
      <li>1</li>
      <li>2</li>
      <li>3</li>
      <li class="hover">4</li>
    </ul>
  </div>
  <input type="hidden" id="hidden_question_id" value="<%= @question.id %>"/>
  <input type="hidden" id="hidden_question_pack_id" value="<%= @question_pack.id %>"/>
  <div class="book_box_func">
    <p>目前发现（21）道七年级二单元三课听写题目</p>
    <div class="sort"><a href="#">时间</a><a href="#">文章名称</a><a href="#">默认排序</a></div>
  </div>
  <div class="book_box_area">
    <div class="book_box_table">
      <%= render "share_questions" %>
    </div>
  </div>

  <div class="remark_btn">
    <button class="green_btn" onclick="">保存</button>
  </div>
</div>
<%= form_for @question_pack do |f| %>
  <div class="remark">
    <h1>填写作业备注</h1>
    <div class="remark_con"><%= f.text_area :name, :rows => 5%></div>
    <div class="remark_btn"><button class="green_btn">保存作业</button></div>
  </div>
<% end %>