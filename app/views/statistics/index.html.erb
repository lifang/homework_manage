<div class="main">
  <div class="statistics">
    <div class="statistics_head">
      <% if !@all_tags.nil? && @all_tags.length != 0  %>
      <div class="sh_choose">
        <% @all_tags.each do |tag| %>
            <% if tag[:tag_name]  == @all_tags[0][:tag_name]%>
                <a href="javascript:void(0);" onclick="show_tag_details('<%= tag[:tag_id] %>','<%= @current_task.id %>')" class="hover">
                    <%= tag[:tag_name] %>
                </a>
            <% else %>
                <a href="javascript:void(0);" onclick="show_tag_details('<%= tag[:tag_id] %>','<%= @current_task.id %>')" >
                  <%= tag[:tag_name] %>
                </a>
            <% end %>
        <% end %>
      </div>
      <% end %>
      <div class="sh_date">
        <span class="prev">prev</span>
        <p><%= @current_task.created_at.strftime("%Y/%m/%d")  %> 作业完成情况</p>
        <span class="next">next</span>
      </div>
      <div class="sh_dateIcon"><a href="javascript:void(0);" class="tooltip_html">选择日期</a></div>
    </div>
    <div class="statistics_body">
      <div class="sb_classify">
        <ul>
          <li class="complete">
            <h1>完成率</h1>
            <div class="statistics_img"><img src="/assets/new/95.jpg"><%= @average_correct_rate  %></div>
            <div class="sc_nav"><a href="javascript:void(0);" class="hover">学员</a></div>
          </li>
          <li class="correct">
            <h1>正确率</h1>
            <div class="statistics_img"><img src="/assets/new/85.jpg"><%= @average_correct_rate  %></div>
            <div class="sc_nav"><a href="javascript:void(0);">学员</a><a href="javascript:void(0);">题型</a></div>
          </li>
        </ul>
      </div>

      <div class="sb_table">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <thead>
          <tr>
            <th width="200">学员</th>
            <% @question_types.each do |type| %>
            <th><%= Question::TYPES_NAME[type.to_i]  %></th>
            <% end %>
            <th><a href="javascript:void(0);" class="th_sort tooltip_title" title="点击排序">完成率</a></th>
          </tr>
          </thead>
          <tbody>
          <% @details.each do |student|  %>
          <tr>
            <td width="200"><div class="td_user"><img src="<%= student[:avatar_url] %>"><%= student[:name] %></div></td>
            <% @question_types.each do |type| %>
                <% if student[:answer_details].nil? %>
                    <td><em>-</em></td>
                <% else %>
                    <% if student[:answer_details][type.to_i].nil? %>
                        <td><em>-</em></td>
                    <% else %>
                        <td><img src="/assets/new/d.png"><em><%= student[:answer_details][type.to_i][0][:used_time] %></M></em></td>
                    <% end %>
                <% end %>
            <% end %>
            <td><%= student[:average_complete_rate] %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
