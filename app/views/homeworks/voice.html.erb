<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN" xml:lang="zh-CN">
	<head>
		<title>VOCWordToYourMp3</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<script src="/assets/jquery.js" type="text/javascript"></script>
		<style type="text/css" media="screen">
		html, body { height:100%; background-color: #313d46;}
		body { margin:0; padding:0; overflow:hidden; }
		#flashContent { width:100%; height:100%; }
		</style>
		<script type="text/javascript">
				var jsReady = false;  
				function isReady() {  
				 return jsReady;  
				}  

				function thisMovie(movieName) {  
					if (navigator.appName.indexOf("Microsoft") != -1) {  
					 return window[movieName];  
					} else {  
					 return document[movieName];  
					}  
				}  
				function pageInit() { 
					jsReady = true; 
					
				}
			    function sendToActionScript(class_id) { 
			    	thisMovie("mp3File").sendClassId(class_id);
			    }
		</script>
	</head>
	<body onload="pageInit()">
		<div id="flashContent">
			<object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000" width="300" height="220" id="VOCWordToYourMp3" align="middle">
				<param name="movie" value="VOCWordToYourMp3.swf" />
				<param name="quality" value="high" />
				<param name="bgcolor" value="#313d46" />
				<param name="play" value="true" />
				<param name="loop" value="true" />
				<param name="wmode" value="window" />
				<param name="scale" value="showall" />
				<param name="menu" value="true" />
				<param name="devicefont" value="false" />
				<param name="salign" value="" />
				<!--param name="allowScriptAccess" value="sameDomain" /-->
				<param name="allowScriptAccess" value="always" />
				<!--[if !IE]>-->
				<object type="application/x-shockwave-flash" data="/VOCWordToYourMp3.swf" width="300" height="220"  id="mp3File">
					<param name="movie" value="VOCWordToYourMp3.swf" />
					<param name="quality" value="high" />
					<param name="bgcolor" value="#313d46" />
					<param name="play" value="true" />
					<param name="loop" value="true" />
					<param name="wmode" value="window" />
					<param name="scale" value="showall" />
					<param name="menu" value="true" />
					<param name="devicefont" value="false" />
					<param name="salign" value="" />
					<param name="allowScriptAccess" value="always" />
				<!--<![endif]-->
					<a href="http://www.adobe.com/go/getflash">
						<img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="获得 Adobe Flash Player" />
					</a>
				<!--[if !IE]>-->
				</object>
				<!--<![endif]-->
			</object>
		</div>
		<script type="text/javascript">
			$(document).ready(function(){
				var obj = $("#mp3File");
				var wait=setInterval(function(){  
                if(obj.length > 0){  
                   sendToActionScript('<%= params[:school_class_id] %>');
                }  
            },200); 
			})
		</script>
	</body>
</html>
