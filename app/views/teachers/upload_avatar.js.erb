<% if @status.eql?("true") %>
  $('#changes_avatar').html("<%= escape_javascript(render :partial => "cutphotos") %>");
  $('#changes_avatar').show();
  $("#fugai").hide();
  $("#fugai1").hide();
<%else %>
  <% if @status.eql?("imgbig") %>
    $("#fugai").hide();
    $("#fugai1").hide();
    message = "图片不可大于1M";
    tishi(message);
  <% else %>
    message = "上传图片失败";
    tishi(message);
  <% end %>
<%end%>