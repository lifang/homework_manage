<div class="controller">
  <div class="controller_head">
    <a href="javascript:void(0)" class="addController_btn_a" onclick="show_add_question_admin_pannel()">新建管理员</a>
    <div class="search"><button onclick="search_admin(this)"></button><input class="key_word" type="text"></div>
  </div>
  <div class="controller_body">
      <div class="b_table">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
           <thead>
            <tr>
              <th>管理员姓名</th>
              <th>管辖题库（教材）</th>
              <th>修改管辖</th>
              <th>管理员账户信息</th>
              <th>重置密码</th>
              <th>停用</th>
            </tr>
            </thead>
            <tbody>
            <% @question_admins.each do |admin| %>
            <tr>
              <td><%= admin.name %></td>
              <td><%= admin.material_name.present? ? admin.material_name : "未设置" %></td>
              <td><a href="javascript:void(0)" class="controller_a tooltip_html" onclick="show_material_pannel(<%= admin.id %>)" >修改管辖</a></td>
              <td><%= admin.email %>/ ******</td>
              <td><a href="javascript:void(0)" class="reset_a tooltip_html" onclick="show_password_pannel(<%= admin.id %>)" >重置密码</a></td>
              <td><a href="javascript:void(0);" class="<%= admin.status == Teacher::STATUS[:YES] ? 'blockUp_a' : 'blockUp_a_ed' %> tooltip_html" onclick="show_disable_pannel(<%= admin.id %>,<%= admin.status %>)"><%= admin.status == Teacher::STATUS[:YES] ?  "停用" : "禁用" %></a></td>
            </tr>
            <% end %>
            </tbody>
          </table>
      </div>
  </div>
</div>
<%= will_paginate @question_admins, :next_label => "下一页", :previous_label => "上一页", :class => "pageTurn"%>


<div class="tab" id="question_admin" style="display:none;">
</div>

<div class="tab_Prompt" id="waiting_warning">
  <p>帐号创建中,请稍后...</p>
</div>