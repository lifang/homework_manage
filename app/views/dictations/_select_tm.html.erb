<a href="javascript:void(0);" class="close">close</a>
<div class="tab_head">创建班级</div>
<div class="tab_body clearAfter" style="overflow-y:inherit;">
  <div class="tab_setClass">
    <div class="tab_setClass_step">
      <h2>1.请选择科目对应的教材</h2>
      <p class="step_two">第二步</p>
    </div>
    <% if @teachingmaterial.any? %>
      <ul>
        <% @teachingmaterial.each do |course_id, teachingmaterials| %>
          <li class="select_tm" data-courseid="<%= course_id %>">
            <div class="select_box">
              <div class="rowElem">
                <select name="teaching_material_id">
                  <option value="opt1">选择教材</option>
                  <% teachingmaterials.each do |teachingmaterial| %>
                    <option value="<%= teachingmaterial.id%>"><%= teachingmaterial.name %></option>
                  <% end %>
                </select>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div style="text-align:center">
        教材为空
      </div>
    <% end %>
  </div>
  <div style="text-align:center">
    <p class="notice">找不到您要的教材，自己动手添加一本吧。</p>
    <a href="javascript:void(0)" onclick="addTM(this)" class="tab_link">添加教材</a>
  </div>
  <div class="tab_btn"><button type="button" onclick="setTm(this)">下一步</button></div>
</div>
<script language="javascript">
  $(function(){
    $('.select_box').jqTransform();
  });
</script>